<resources>

    <style name="Zoom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
    <style name="SlideLeftSide" parent="Animation.AppCompat.Dialog">
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_right</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>

    </style>
    <style name="SlideRightSide" parent="Animation.AppCompat.Dialog">
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_left</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="SlideUpDown" parent="Animation.AppCompat.Dialog">
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>